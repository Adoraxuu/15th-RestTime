<div class="flex flex-col w-full border-opacity-50 my-10">
    <div class="grid card rounded-box border border-base-300 place-items-center">
        <div class="comment-<%= comment.id %> container">
            <div class="label m-3 h-10">
                <div>
                <i class="fa-solid fa-user"></i>
                <span class="label-text text-stone-950 p-2"><%= comment.user.email %></span>
                </div>
                <span class="label-text-alt text-slate-600">Posted <%= time_ago_in_words(comment.created_at) %></span>
            </div>
                <hr/>
                <div class="trix-content">
                <%= comment.body %>
            </div>
        </div>
    </div>
</div>