<div class="p-2 bg-white border rounded shadow border-slate-300">
  <%= link_to order_path(order) do %>
  <span class="font-bold"><%= format_datetime(order.service_date) %></span>
  <h1><%= order.shop.title %></h1>
  <h2 class="font-bold"><%= order.product.title %></h2>
  <span>NT$ <%= order.price.to_i %></span>
  <% end %>
</div>
